<div class="col-md-2"></div>
<div class="col-md-8">
    <section id="formBody">
        <h3 id="addPageTitle">List a Dog for Sale</h3>
        <hr>
        <form>
            <div class="form-group">
                <label for="formDogName">Dog Name</label>
                <input type="text" class="form-control" id="formDogName" placeholder="Your dog's name">
            </div>
            <div class="form-group">
                <label for="formPicture">Picture Link</label>
                <input type="text" class="form-control" id="formPicture" placeholder="URL Link to dog picture">
            </div>
            <div class="form-group">
                <label for="formBreed">Breed</label>
                <input type="text" class="form-control" id="formBreed" placeholder="Your dog's breed">
            </div>
            <div class="form-group">
                <label for="formColor">Color</label>
                <input type="text" class="form-control" id="formColor" placeholder="Your dog's color">
            </div>
            <div class="form-group">
                <label for="formGender">Gender</label>
                <select class="form-control" id="formGender">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formGWD">Good With Dogs</label>
                <select class="form-control" id="formGWD">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formGWK">Good With Kids</label>
                <select class="form-control" id="formGWK">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formGWC">Good With Cats</label>
                <select class="form-control" id="formGWC">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formLocation">Location</label>
                <input type="text" class="form-control" id="formLocation" placeholder="ex: Nashville, TN">
            </div>
            <div class="form-group">
                <label for="formPhone">Your Phone Number</label>
                <input type="phone" class="form-control" id="formPhone" placeholder="123.456.7890">
            </div>
            <div class="form-group">
                <label for="formEmail">Your Email address</label>
                <input type="email" class="form-control" id="formEmail" placeholder="name@example.com">
            </div>
            <button type="submit" class="btn" id="formSubmit">Submit</button>
        </form>
    </section>
</div>
<div class="col-md-2"></div>